{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
	"rootDir": ".",
	"paths": {
		"models": ["src/models/index.ts"],
		"models/*": ["src/models/*"],
		"components": ["src/components/index.ts"],
		"components/*": ["src/components/*"],
		"views": ["src/views/index.ts"],
		"views/*": ["src/views/*"],
		"core": ["src/core/index.ts"],
    "core/*": ["src/core/*"],
    "utils": ["src/utils/index.ts"],
		"utils/*": ["src/utils/*"]
	  },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
